# @desc An example of how you can use this bot
# @dest to react on different commands or words

sayHelloBack() {
    irc.sayToChannel "Well, hello there ${privMsg['remoteNick']}"
}

# case insensitive 
shopt -s nocasematch
case "${privMsg['message']}" in
    \!hello) sayHelloBack;;
esac

# vi:syntax=bash
